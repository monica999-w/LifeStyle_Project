{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console","Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./bin/log.txt",
          "rollingInterval ": "Day",
          "fileSizeLimitBytes": 52428800
        }
      }
      
    ]
  },

  "ConnectionStrings": {
    "LifeStyleConnection": "Server=(localdb)\\projectmodels;Database=LifeStyle;Trusted_Connection=True;"
  },


  "AllowedHosts": "*"
}
